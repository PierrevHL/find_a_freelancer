<h1>Profiles#index</h1>

<div class="container">
  <div class = "row">
    <% @profiles.each do |profile| %>
      <div class="col-lg-4" style="width: 18rem;">
        <% if profile.image.attached?  %>
          <%= cl_image_tag profile.image.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <img class="card-img-top" src="https://picsum.photos/300/400" alt="Card image cap">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to profile.user.first_name.capitalize, profile_path(profile) %></h5>
          <p class="card-text"><%= profile.skill_list %></p>
          <!-- <a href="profile_path" class="btn btn-primary">Show</a>   -->
        </div>
      </div>
    <% end %>
  </div>
</div>


<div id="map"
   style="width: 100%; height: 400px;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


