
<div class="container">
  <h2 class="row justify-content-center py-4">Freelancers</h2>
  <div class = "row">
    <% @profiles.each do |profile| %>
      <div class="col-lg-4" style="width: 18rem;">
        <% if profile.image.attached?  %>
          <%= link_to profile_path(profile) do %>
            <%= cl_image_tag profile.image.key, height: 350, width: 400, crop: :fill %>
          <% end %>
        <% else %>
          <%= link_to profile_path(profile) do %>
            <%= image_tag "https://picsum.photos/1000" , class: "some css class here" %>
          <% end %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to profile.user.first_name.capitalize, profile_path(profile) %></h5>
          <p class="card-text"><%= profile.skill_list %></p>
          <!-- <a href="profile_path" class="btn btn-primary">Show</a>   -->
        </div>
      </div>
    <% end %>
  </div>



<div id="map"
   style="width: 100%; height: 400px;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


</div>
