<br>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% if @profile.image.attached?  %>
        <%= cl_image_tag @profile.image.key, height: 350, width: 400, crop: :fill %>
      <% else %>
          <img src="https://picsum.photos/1000" alt="">
      <% end %>
    </div>

    <div class="col-md-4">
      <h2><%= @profile.user.first_name.capitalize %></h2>
      <br>
      <h3><%= @profile.description %></h3>
      <br>
      <% @profile.profile_skills.each do |profile_skill| %>
        <div class="d-flex justify-content-between">
          <p><%= profile_skill.skill.name %></p>
          <p><%= profile_skill.rate || 0 %><%= " $/hour" %></p>
        </div>
      <% end %>

      <br>
      <p><%= @profile.location %></p>
    </div>

    <div class="col-md-4">
      <div class="d-flex justify-content-around mx-5 px-5">

        <div id='profile-booking-dates'  data-rate="<%= @profile.rate %>" data-unavailable="<%= @profile.unavailable_dates.to_json %>">
          <% if (@profile.user != current_user) && user_signed_in? %>
            <div class="item">
            <% if user_signed_in? %>
              <%= link_to 'Send a message', conversations_path(sender_id: current_user.id, receiver_id: @profile.user.id), method: 'post', class:"btn btn-primary" %>
            <% else %>
              <%= link_to 'Send a message', conversations_path, class:"btn btn-primary" %>
            <% end %>
            </div>
            <%= simple_form_for [@profile, @booking] do |f| %>
              <%= f.input :start_date,as: :date, html5: true, input_html: {value: session[:start_date]} %>
              <%= f.input :end_date,as: :date, html5: true, input_html: {value: session[:end_date]}  %>
              <%= f.submit "Book", class: "btn btn-primary" %>
            <% end %>
            <p id="live-price" class="my-4"></p>
          <% end %>
        </div>
      </div>
    </div>
</div>
<br>
<br>
<div class="container my-5">
  <div class="d-flex justify-content-around mx-5 px-5">
    <% if @profile.user == current_user %>
      <%= link_to "Edit profile", edit_profile_path(@profile), class:"btn btn-outline-secondary" %>
      <%= link_to "Update rates", edit_rates_profile_path, class:"btn btn-outline-secondary" %>
      <%= link_to "Back to list", profiles_path, class:"btn btn-outline-secondary" %>
    <% else %>
      <%= link_to "Back to list", profiles_path, class:"btn btn-outline-secondary" %>
    <% end %>
  </div>
</div>


