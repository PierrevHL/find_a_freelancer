<br>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% if @profile.image.attached?  %>
        <%= cl_image_tag @profile.image.key, height: 350, width: 400, crop: :fill %>
      <% else %>
          <img src="https://picsum.photos/1000" alt="">
      <% end %>
    </div>

    <div class="col-md-4">
      <h2><%= @profile.user.first_name.capitalize %></h2>
      <br>
      <h3><%= @profile.description %></h3>
      <br>
      <% @profile.skills.each do |skill| %>
        <p><%= skill.name %></p>
      <% end %>
      <br>
      <p><%= @profile.location %></p>
      <br>
      <p><%= @profile.rate %>$ /per day</p>
    </div>

    <div class="col-md-4">
      <div id='profile-booking-dates' data-unavailable="<%= @profile.unavailable_dates.to_json %>">
      <% if @profile.user != current_user %>
        <%= simple_form_for [@profile, @booking] do |f| %>
          <%= f.input :start_date, html5: true %>
          <%= f.input :end_date, html5: true  %>
          <%= f.submit "Book", class: "btn btn-primary" %>
        <% end %>
      <% end %>
      </div>
    </div>

  </div>
</div>
<br>
<br>
<div class="container my-5">
  <div class="d-flex justify-content-around mx-5 px-5">
    <% if @profile.user == current_user %>
      <%= link_to "Edit profile", edit_profile_path(@profile), class:"btn btn-outline-secondary" %>
      <%= link_to "Back to list", profiles_path, class:"btn btn-outline-secondary" %>
    <% else %>
      <%= link_to "Back to list", profiles_path, class:"btn btn-outline-secondary" %>
      <% if user.id != current_user.id %>
        <div class="item">
          <%= user.first_name %> <%= link_to 'Message me!', conversations_path(sender_id: current_user.id, receiver_id: user.id), method: 'post', class:"btn btn-outline-secondary"%>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


