<h1>Create your profile</h1>

<%= simple_form_for @profile do |f| %>
  <%= f.input :skills, collection: Skill.all, input_html: { class: 'tags-selector', multiple: true, autocomplete: "skills" },
              required: true,
              autofocus: true %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :location_specific %>
  <%= f.input :image, as: :file %>
  <%= f.submit %>
<% end %>
