<h3 class="text-center py-4">Bookings</h3>
<nav>
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <% if (user_signed_in? && current_user.profile) || !user_signed_in? %>
      <a class="nav-item nav-link active" id="nav-user-tab" data-toggle="tab" href="#nav-user" role="tab" aria-controls="nav-user" aria-selected="true">User bookings</a>
      <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-freelancer" role="tab" aria-controls="nav-freelancer" aria-selected="false">Freelancer bookings</a>
    <% end %>
  </div>
</nav>
<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-user" role="tabpanel" aria-labelledby="nav-user-tab">
    <div class="container">
      <% @bookings.each do |booking| %>
        <div class="list_card mb-4">
        <%= link_to profile_path(booking.profile) do %>
          <% if booking.profile.image.attached? %>
            <%= cl_image_tag booking.profile.image.key %>
          <% else %>
          <img src="https://source.unsplash.com/800x600" alt="">
          <% end %>
        <% end %>
          <div class="list_card-info w-100">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h2><%= link_to booking.profile.user.first_name, profile_path(booking.profile) %></h2>
                <p><strong><%= booking.profile_skill.skill.name %></strong> </p>
                <p><%= booking.start_date.strftime("%A, %b %d") %> <br class="linebreak">- <%= booking.end_date.strftime("%A, %b %d") %> </p>
                <p><strong>Status</strong> <%= booking.status %></p>
              </div>
              <div class="d-flex flex-column">
                <p><strong><%= booking.total_price %>$</strong></p>
                <% if booking.status == "completed"%>
                  <%= link_to 'Add a review', new_booking_freelancer_review_path(booking), class: "btn btn-primary"%>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="nav-freelancer" role="tabpanel" aria-labelledby="nav-freelancer-tab">
    <div class="container">
      <% @freelancer_bookings.each do |booking| %>
        <div class="list_card m-4">
          <div class="list_card-info w-100">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h2><%= booking.user.first_name %><%= " " %>booked:</h2>
                <p><strong><%= booking.profile_skill.skill.name %></strong> </p>
                <p><strong>Dates</strong> <%= booking.start_date %> - <%= booking.end_date %> </p>
                <p><strong>Status</strong> <%= booking.status %></p>
              </div>
              <div class="d-flex flex-column">
                <p><strong><%= booking.total_price %>$</strong></p>
                <% if booking.status == "completed"%>
                  <%= link_to 'Add a review', new_booking_user_review_path(booking), class: "btn btn-primary"%>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
</div>



