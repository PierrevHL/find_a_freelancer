<div class="container">
  <h2 class="row justify-content-center py-4">My bookings</h2>
    <% @bookings.each do |booking| %>
    <div class="list_card m-4">
      <%= link_to profile_path(booking.profile) do %>
       <%= cl_image_tag booking.profile.image.key %>
      <% end %>
      <div class="list_card-info w-100">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2><%= link_to booking.profile.user.first_name, profile_path(booking.profile) %></h2>
            <p><strong><%= booking.profile_skill.skill.name %></strong> </p>
            <p><strong>Dates</strong> <%= booking.start_date %> - <%= booking.end_date %> </p>
            <p><strong>Status</strong> <%= booking.status %></p>
          </div>

          <div class="d-flex flex-column">
            <p><strong><%= booking.total_price %>$</strong></p>
            <%= link_to 'Add a review', new_booking_freelancer_review_path(booking), class: "btn btn-primary"%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
