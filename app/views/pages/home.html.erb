
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dkvpkwm9f/image/upload/v1606894846/pexels-lukas-684314_rjfrrs.jpg);">
  <div>
    <h2 class="text-center">Find a <strong>freelancer</strong></h2>
    <p class="text-center">Hire a freelancer for any task!</p>
      <%= simple_form_for :search, url: profiles_path, method: :get, html: { class: "search-form" } do |f| %>
      <div class="search-form-control d-flex justify-content-center align-items-center">
        <input class="form-control string required w-50" type="text" placeholder="Skill"  name="skill" />
        <input class="form-control string required w-50" type="text" placeholder="Location/ Name / etc." name="query" /> 
        <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker", placeholder: "From"}, wrapper_html: { class: "mb-0 w-25"}, label: false %>
        <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker", placeholder: "Until"}, wrapper_html: { class: "mb-0 w-25"}, label: false %>
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  </div>
</div>
