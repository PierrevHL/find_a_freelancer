
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dkvpkwm9f/image/upload/v1606894846/pexels-lukas-684314_rjfrrs.jpg);">
  <div>
    <h2 class="text-center">Find a <strong>freelancer</strong></h2>
    <p class="text-center">Hire a freelancer for any task!</p>
      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
          <%= simple_form_for :search, method: "get", url: profiles_path do |f| %>
          <div class="d-flex justify-content-center align-items-center">
            <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker", placeholder: 9999}, label: false %>
            <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker", placeholder: 9999}, label: false %>
            <div class="form-group">
              <%= f.button :submit, "Search", class: "btn btn-primary" %>

            </div>
          </div>
          <% end %>
      </div>
  </div>
</div>
