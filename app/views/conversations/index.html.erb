<div class="ui segment">
  <h3>Messages</h3>
  <div class="ui list">
    <div class="item">
      <% @conversations.each do |conversation| %>
        <% if conversation.messages.any?%>
        <div class="conv-card" style="width: 20rem;">
          <div class="card-body">
              <h5 class="card-title"><%= conversation.contact.first_name %></h5>
              <p class="card-text">
                <%= conversation.messages.last.content.truncate(45) %></p>
              <p class="card-text">
                <%= conversation.messages.last.created_at.strftime("%A, %b %d") %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

