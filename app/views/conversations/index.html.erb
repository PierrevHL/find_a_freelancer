<div class="ui segment">
  <h3>Messages</h3>
  <div class="ui list">
    <div class="item">
      <% @conversations.each do |conversation| %>
        <div class="d-flex mx-5 px-5">
          <div class="container w-fit">
          <% if conversation.messages.length > 0 %>
            <% if conversation.sender_id == current_user.id || conversation.receiver_id == current_user.id %>
              <% if conversation.sender_id == current_user.id %>
                <% receiver = User.find(conversation.receiver_id) %>
              <% else %>
                <% receiver = User.find(conversation.sender_id) %>
              <% end %>
            <%= link_to receiver.first_name, conversation_messages_path(conversation)%>
            <% end %>
          <% end %>
          </div>
          <div class="d-flex justify-content-around flex-grow-1">
            <div class="container">
              <% conversation.messages.each do |message| %>
                <% if message.content %>
                  <% user = User.find(message.user_id) %>
                  <div class="item">
                    <div class="content">
                      <div class="header"><strong><%= user.first_name %><%= " " %></strong><%= message.message_time %></div>
                      <div class="list">
                        <div class="item">
                          <i class="right triangle icon"></i>
                          <%= message.content %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            <div class="container">
              <% if conversation.messages.length > 0 %>
                <%= form_for [conversation, Message.new] do |f| %>
                  <div class="field">
                    <%= f.text_area :content, class:"form-control" %>
                  </div>
                  <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
                  <div>
                    <%= f.submit "Add Reply", class:"btn btn-primary" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
