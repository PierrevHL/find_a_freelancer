<div class="conv-card">
  <div class="img">
    <img class="avatar" src="https://source.unsplash.com/800x800/?worker" alt="">
  </div>
  <div class="content">
    <h3 class="card-title"><%= current_user.first_name.capitalize %></h3>
    <p class="card-date">Joined in <%= current_user.created_at.strftime("%B %Y") %></p>
  </div>
</div>
<% if (user_signed_in? && !current_user.profile) || !user_signed_in? %>
  <%= link_to "Join the network and become a freelancer yourself!", new_profile_path, class:"btn btn-green" %>
<% end %>