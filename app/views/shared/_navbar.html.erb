<div class="navbar navbar-expand-sm navbar-light navbar-lewagon d-none d-sm-flex">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'logo.png'%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse fixed-collapse-size" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto w-100 justify-content-end">
      <li class="nav-item active">
      <li class="nav-item">
        <% if (user_signed_in? && !current_user.profile) || !user_signed_in? %>
          <%= link_to "Become a freelancer", new_profile_path, class:"btn btn-green" %>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "image.png", class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown" style="border-radius: 17px;">
          <% if user_signed_in? %>
            <%= link_to "Dashboard", dashboard_path, class:"dropdown-item" %>
            <%= link_to "Messages", conversations_path, class:"dropdown-item"%>
            <% if current_user.profile %>
              <%= link_to "Profile", profile_path(current_user.profile), class:"dropdown-item"%>
            <% end %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
